<%= form_for [wiki, Collaborator.new] do |f| %>
  <div class="form-group">
    <%= f.label :Add_a_collaborator %>
    <%= f.text_field :user %>
  </div>
  <div class="form-group">
    <%= f.submit "Save Collaborator", class: 'btn btn-success' %>
  </div>
  <h3>Current Collaborators</h3>
  <% @wiki.collaborators.each do |c| %>
        <p class="lead"><%= User.find(c.user_id).email %> - <%= link_to "Remove Collaborator", [@wiki, c], class: 'btn btn-danger', method: :delete, data: {confirm: 'Click here to confirm deletion'} %> </p>
  <% end %>
  </ul>

<% end %>
